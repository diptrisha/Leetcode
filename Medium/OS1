string filename;

string getNextToken()
{
    char delimeter[] = " \t\n";
    string token;
    ifstream f;
    while(!f.eof())
    {
        f.open(filename);
        while(getline(f, token)) {

                istringstream line(token);
                
                while(line >> token) {
                //cout << "Tok-" << token << endl;
                return token;
                
                if(f.unget().get() == '\n') {
                    cout << "newline found" << endl;
                }
                }
        }
    }
    return "$";
}

bool is_number(const std::string& s)
{
    std::string::const_iterator it = s.begin();
    while (it != s.end() && std::isdigit(*it)) ++it;
    return !s.empty() && it == s.end();
}
int readInt()
{
    string tok;
    tok = getNextToken();
    if(is_number(tok))
    {
        return stoi(tok);
    }
    return 0;
}

string readSymbol()
{
    string token = getNextToken();
