    }

    //infile = fopen(argv[1],"r");
    filename = argv[1];
    f.open(filename);
    passOne();
    // call print sym table
    printSymbolTable();
    f.close();
    //fclose(infile);
    f.open(filename);
    passTwo();
    printMemoryMap();
    f.close();

    return 0;
}
