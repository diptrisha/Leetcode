import java.util.*;
class Solution {
    public int arrayPairSum(int[] nums) {
        Arrays.sort(nums);
        int sum = 0;
        int i = 0;
        int j = 1;
        while(i<j && j<= nums.length-1)
        {
            sum = sum+ Math.min(nums[i],nums[j]);
            i= i+2;
            j = j+2;
        }
        
        return sum;
    }
}
